@model AdminMailViewModel

@{
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form asp-action="Index" method="post">

    <div class="form-group">
        <label asp-for="ReceiverMail">Receiver Email</label>
        <input asp-for="ReceiverMail" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Subject">Subject</label>
        <input asp-for="Subject" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Body">Message</label>
        <textarea asp-for="Body" rows="10" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Send Email</button>
</form>